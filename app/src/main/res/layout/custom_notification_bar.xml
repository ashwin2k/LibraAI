<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="130dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Libra is Listening!"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nunitosans_semibold"
        android:textColor="#FFF"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to open in app"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/nunitosans_medium"
        android:textColor="#A8A8A8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/toggle_libra"
            android:layout_weight="1">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_record"
                android:layout_gravity="center"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="Toggle Rec"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunitosans_semibold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/sos_flash"
            android:layout_weight="1">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sos_flash"
                android:layout_gravity="center"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="SOS Flash"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunitosans_semibold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/sms_alert"
            android:layout_weight="1">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_smsalert"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="SMS Alert"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunitosans_semibold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/police_alert"

            android:layout_weight="1">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_police"
                android:layout_gravity="center"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="Call Police"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunitosans_semibold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>